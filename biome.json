{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "formatter": {
        "enabled": true,
        "useEditorconfig": true
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "complexity": {
                "useArrowFunction": "off",
                "noForEach": "off"
            },
            "suspicious": {
                "noAssignInExpressions": "off"
            }
        }
    },
    "javascript": {
        "formatter": {
            "trailingCommas": "es5",
            "quoteStyle": "double"
        }
    }
}
